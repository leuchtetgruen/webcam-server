{
	//"webcam_name" : "FaceTime HD Camera",
	//"record_path": "/tmp", 

	"mode": "picture",

	"port" : 4223,
	"width" : 640,
	"height": 480,

	"reload_token" : "secret", // you should seriously change that
	"main_token": "everyone",

	//"hostname" : "...",


	"keep_minutes" : 30,

	"tokens" : {
		"everyone": {
			// no restrictions except only for localhost and local networks
			"ips" : [
				"::1",
				"127.0.0.1",
				"192.168.*",
				"10.*"
			]
		},

		"restricted" : {
			// restricted to one ip, for one hour with a seperate capture task
			"ip_lock" : true,
			"valid_for" : 3600,
			"filename" : "image_secret.jpg"
		},

		"once" : {
			// this image will only be able to be loaded once
			"max_loads": 1
		}
	}
}
